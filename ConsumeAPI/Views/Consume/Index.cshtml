@model IEnumerable<CQRS_Practice.Model.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <a class="btn btn-sm btn-primary m-2 p-2 float-right" asp-action="Create" asp-controller="Product">Add Product</a>

            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-dark text-light text-center">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Image Path</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model.Count()>0)
                    {
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.Name</td>
                                <td>@d.Price</td>
                                <td>@d.Description</td>
                                <td>@d.ImagePath</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="" asp-controller="" asp-route-id="@d.Id">Edit</a>
                                    <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure, You want to delete?')" asp-action="" asp-controller="" asp-route-id="@d.Id">Delete</a>
                                    <a class="btn btn-sm btn-warning" asp-action="" asp-controller="" asp-route-id="@d.Id">Details</a>
                                </td>
                               



                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5">
                                <h2 class="text-warning bg-info">No Record</h2>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
