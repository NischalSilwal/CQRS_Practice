@model IEnumerable<ConsumeAPI.Models.Product>

@{
    ViewData["Title"] = "GetAllProduct";
}

<h1>Get All Products</h1>

<p>
    <a asp-action="AddProduct" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Image
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@Url.Content(item.ImagePath.Replace("\\", "/"))" alt="Product Image" style="width:100px;height:auto;" />
                </td>
                <td>
                    <!-- Edit Link -->
                    <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |

                    <!-- Delete Link -->
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
